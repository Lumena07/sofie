{
    "version": 2,
    "builds": [
        {
            "src": "api/*/index.py",
            "use": "@vercel/python@3.1.0",
            "config": {
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/query",
            "dest": "/api/query"
        },
        {
            "src": "/api/update-knowledge",
            "dest": "/api/update-knowledge"
        },
        {
            "src": "/api/health",
            "dest": "/api/health"
        },
        {
            "src": "/(.*)",
            "dest": "/api/health"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 