{
    "version": 2,
    "builds": [
        {
            "src": "vercel_app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "includeFiles": ["requirements.txt"]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "vercel_app.py"
        }
    ]
} 