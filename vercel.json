{
    "version": 2,
    "builds": [
        {
            "src": "api/*/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "installCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt --no-cache-dir"
            }
        },
        {
            "src": "api/query/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "api/webhook/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/query",
            "dest": "api/query/index.py"
        },
        {
            "src": "/api/update-knowledge",
            "methods": ["POST"],
            "dest": "/api/update-knowledge"
        },
        {
            "src": "/api/webhook",
            "methods": ["POST"],
            "dest": "/api/webhook"
        },
        {
            "src": "/api/webhook/test",
            "methods": ["GET"],
            "dest": "/api/webhook"
        },
        {
            "src": "/api/health",
            "methods": ["GET"],
            "dest": "/api/health"
        },
        {
            "src": "/(.*)",
            "dest": "/api/health"
        },
        {
            "src": "/(.*)",
            "dest": "api/webhook/index.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PIP_NO_BINARY": "openai"
    }
} 